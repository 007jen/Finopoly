// ============================================================
//  DATASOURCE & GENERATOR
// ============================================================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================================
//  ENUMS
// ============================================================
enum Role {
  student
  admin
}

enum Difficulty {
  Beginner
  Intermediate
  Pro
}

// ============================================================
//  USER MODEL
// ============================================================
model User {
  id      String  @id @default(uuid())
  clerkId String  @unique
  email   String  @unique
  name    String?
  avatar  String?
  role    Role    @default(student)

  xp               Int       @default(0)
  streak           Int       @default(0)
  lastActivityDate DateTime?

  preferredAreas String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userBadges      UserBadge[]
  activities      Activity[]
  caseSubmissions CaseSubmission[]

  // Content created by Admin
  auditCases     AuditCase[]
  taxSimulations TaxSimulation[]
  caseLaws       CaseLaw[]

  @@index([xp])
}

// ============================================================
//  BADGES (Catalog of all badges)
// ============================================================
model Badge {
  id            String  @id @default(uuid())
  name          String  @unique
  description   String
  icon          String?
  xpRequirement Int

  userBadges UserBadge[]
}

// ============================================================
//  USER-BADGES (Which user earned which badge)
// ============================================================
model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])

  @@unique([userId, badgeId]) // Prevent duplicate badges
}

// ============================================================
//  CASE LAW CONTENT
// ============================================================
model CaseLaw {
  id         String     @id @default(uuid())
  title      String
  category   String
  difficulty Difficulty
  xpReward   Int        @default(100)

  facts         String
  question      String
  options       String[]
  correctAnswer String
  explanation   String
  isActive      Boolean  @default(true)

  submissions CaseSubmission[]

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================
//  AUDIT CASE CONTENT
// ============================================================
model AuditCase {
  id          String     @id @default(uuid())
  title       String
  companyName String
  difficulty  Difficulty
  description String

  xpReward  Int     @default(150)
  timeLimit Int?
  isActive  Boolean @default(true)

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================
//  TAX SIMULATIONS
// ============================================================
model TaxSimulation {
  id          String     @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  scenario    String

  clientData Json
  questions  Json

  xpReward  Int     @default(200)
  timeLimit Int?
  isActive  Boolean @default(true)

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================
//  USER ACTIVITY LOGGING (XP, Scores, Progress)
// ============================================================
enum ActivityType {
  audit
  tax
  caselaw
  quiz
}

model Activity {
  id           String       @id @default(uuid())
  userId       String
  activityType ActivityType
  activityId   String
  xpEarned     Int
  score        Float?
  timeTaken    Int?
  answers      Json?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

// ============================================================
//  CASE SUBMISSIONS (Student written answers)
// ============================================================
model CaseSubmission {
  id     String @id @default(uuid())
  caseId String
  userId String
  answer String

  createdAt DateTime @default(now())

  case CaseLaw @relation(fields: [caseId], references: [id], onDelete: Cascade)
  user User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([caseId, userId])
  @@index([caseId])
  @@index([userId])
}
