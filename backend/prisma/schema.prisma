// ============================================================
//  DATASOURCE & GENERATOR
// ============================================================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================================
//  ENUMS
// ============================================================
enum Role {
  student
  admin
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum Difficulty {
  Beginner
  Intermediate
  Pro
}

// âœ… Safe: Only affects the Analyst Drill module
enum DrillDifficulty {
  JUNIOR
  SENIOR
  PARTNER
}

enum DrillAnswerType {
  NUMBER
  TEXT
}

// ============================================================
//  USER MODEL
// ============================================================
model User {
  id      String     @id @default(uuid())
  clerkId String     @unique
  email   String     @unique
  name    String?
  avatar  String?
  role    Role       @default(student)
  status  UserStatus @default(ACTIVE)

  xp               Int       @default(0)
  streak           Int       @default(0)
  lastActivityDate DateTime?

  // Accuracy Tracking
  correctAnswers Int @default(0)
  totalQuestions Int @default(0)

  // Subject-wise Accuracy (New)
  auditCorrect   Int @default(0)
  auditTotal     Int @default(0)
  taxCorrect     Int @default(0)
  taxTotal       Int @default(0)
  caselawCorrect Int @default(0)
  caselawTotal   Int @default(0)

  completedSimulations Int @default(0)

  preferredAreas String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userBadges      UserBadge[]
  activities      Activity[]
  caseSubmissions CaseSubmission[]

  // Content created by Admin
  auditCases        AuditCase[]
  taxSimulations    TaxSimulation[]
  caseLaws          CaseLaw[]
  challengeAttempts ChallengeAttempt[]
  createdDrills     AnalystChallenge[] @relation("AdminCreatedDrills")

  @@index([xp])
}

// ============================================================
//  BADGES (Catalog of all badges)
// ============================================================
model Badge {
  id            String  @id @default(uuid())
  name          String  @unique
  description   String
  icon          String?
  xpRequirement Int

  userBadges UserBadge[]
}

// ============================================================
//  USER-BADGES (Which user earned which badge)
// ============================================================
model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])

  @@unique([userId, badgeId]) // Prevent duplicate badges
}

// ============================================================
//  CASE LAW CONTENT
// ============================================================
model CaseLaw {
  id         String     @id @default(uuid())
  title      String
  category   String
  difficulty Difficulty
  xpReward   Int        @default(100)

  facts         String
  question      String
  options       String[]
  correctAnswer String
  explanation   String
  isActive      Boolean  @default(true)

  submissions CaseSubmission[]

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================
//  AUDIT CASE CONTENT
// ============================================================
model AuditCase {
  id          String     @id @default(uuid())
  title       String
  companyName String
  difficulty  Difficulty
  description String

  // Dynamic Game Data
  invoiceDetails  Json? // Stores { vendor, amount, date, etc. }
  ledgerDetails   Json? // Stores { date, particulars, debit, etc. }
  expectedAction  String // 'ACCEPT' or 'REJECT'
  violationReason String? // If REJECT, why?
  faultyField     String? // 'Vendor', 'Date', 'Amount', 'Tax', 'Compliance' or null
  tags            String[] @default([])

  xpReward  Int     @default(150)
  timeLimit Int?
  isActive  Boolean @default(true)

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================
//  TAX SIMULATIONS
// ============================================================
model TaxSimulation {
  id          String     @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  scenario    String

  clientData Json
  questions  Json

  xpReward  Int     @default(200)
  timeLimit Int?
  isActive  Boolean @default(true)

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================
//  USER ACTIVITY LOGGING (XP, Scores, Progress)
// ============================================================
enum ActivityType {
  audit
  tax
  caselaw
  quiz
  challenge
}

model Activity {
  id           String       @id @default(uuid())
  userId       String
  activityType ActivityType
  activityId   String
  title        String?
  xpEarned     Int
  score        Float?
  timeTaken    Int?
  answers      Json?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

// ============================================================
//  CASE SUBMISSIONS (Student written answers)
// ============================================================
model CaseSubmission {
  id     String @id @default(uuid())
  caseId String
  userId String
  answer String

  status     String    @default("pending")
  score      Int?
  feedback   String?
  reviewedAt DateTime?

  createdAt DateTime @default(now())

  case CaseLaw @relation(fields: [caseId], references: [id], onDelete: Cascade)
  user User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([caseId, userId])
  @@index([caseId])
  @@index([userId])
}

// ============================================================
//  CHALLENGE CONTENT
// ============================================================
// 1. The Content Model (Managed by Admin)
model AnalystChallenge {
  id              String  @id @default(uuid())
  title           String
  slug            String  @unique
  description     String
  richTextContext String? @db.Text
  isActive        Boolean @default(false)

  // Settings (Using the Safe Enums)
  difficulty DrillDifficulty @default(JUNIOR)
  xpReward   Int             @default(150)

  // Media
  chartUrl   String?
  datasetUrl String?
  videoUrl   String

  // Logic
  question     String
  instructions String          @default("") // Detailed steps for the analyst
  answerType   DrillAnswerType @default(NUMBER)
  correctVal   String
  tolerance    Float?          @default(0.5)

  // Admin Attribution (Single source of truth)
  createdBy String?
  creator   User?   @relation("AdminCreatedDrills", fields: [createdBy], references: [id])

  attempts ChallengeAttempt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
}

// 2. The Progress Model (Tracked per User)
model ChallengeAttempt {
  id String @id @default(uuid())

  // Relations
  userId      String
  challengeId String
  user        User             @relation(fields: [userId], references: [clerkId])
  challenge   AnalystChallenge @relation(fields: [challengeId], references: [id])

  // State
  isCorrect Boolean @default(false)
  userInput String
  attempts  Int     @default(1)

  unlockedVideo Boolean @default(false)

  // Timestamps
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@unique([userId, challengeId])
}
