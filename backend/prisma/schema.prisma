// ============================================================
//  DATASOURCE & GENERATOR
// ============================================================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============================================================
//  ENUMS
// ============================================================
enum Role {
  student
  admin
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum Difficulty {
  Beginner
  Intermediate
  Pro
}

enum DrillDifficulty {
  JUNIOR
  SENIOR
  PARTNER
}

enum DrillAnswerType {
  NUMBER
  TEXT
}

enum ChannelType {
  TEXT
  VOICE
  ANNOUNCEMENT
}

enum SubmissionStatus {
  PENDING
  REVIEWING
  APPROVED
  REJECTED
}

// ============================================================
//  USER MODEL
// ============================================================
model User {
  id      String     @id @default(uuid())
  clerkId String     @unique
  email   String     @unique
  name    String?
  avatar  String?
  role    Role       @default(student)
  status  UserStatus @default(ACTIVE)

  xp               Int       @default(0)
  streak           Int       @default(0)
  level            Int       @default(1)
  lastActivityDate DateTime?

  // Accuracy Tracking (Legacy - Keep for now, but use Stats for new)
  correctAnswers Int @default(0)
  totalQuestions Int @default(0)

  // Subject-wise Accuracy
  auditCorrect   Int @default(0)
  auditTotal     Int @default(0)
  taxCorrect     Int @default(0)
  taxTotal       Int @default(0)
  caselawCorrect Int @default(0)
  caselawTotal   Int @default(0)

  completedSimulations Int      @default(0)
  preferredAreas       String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  stats             UserStats[]
  userBadges        UserBadge[]
  activities        Activity[]
  caseSubmissions   CaseSubmission[]
  challengeAttempts ChallengeAttempt[]
  messages          Message[]

  // Admin Attribution
  createdDrills  AnalystChallenge[] @relation("AdminCreatedDrills")
  caseLaws       CaseLaw[]
  auditCases     AuditCase[]
  taxSimulations TaxSimulation[]

  @@index([xp])
  @@index([clerkId])
}

// ============================================================
//  NORMALIZED USER STATS
// ============================================================
model UserStats {
  id           String       @id @default(uuid())
  userId       String
  moduleType   ActivityType
  correctCount Int          @default(0)
  totalCount   Int          @default(0)
  accuracy     Float        @default(0.0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleType])
}

model Badge {
  id            String  @id @default(uuid())
  name          String  @unique
  description   String
  icon          String?
  xpRequirement Int

  userBadges UserBadge[]
}

model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])

  @@unique([userId, badgeId])
}

// ============================================================
//  COMMUNITY MODELS
// ============================================================
model Channel {
  id          String      @id @default(uuid())
  name        String      @unique
  type        ChannelType @default(TEXT)
  description String?
  messages    Message[]
  createdAt   DateTime    @default(now())
}

model Message {
  id      String @id @default(uuid())
  content String @db.Text

  // ðŸŸ¢ The Magic Field for Challenges (Phase 2)
  challengeData Json?

  // Relations
  senderId String?
  sender   User?   @relation(fields: [senderId], references: [clerkId])

  // Author Info (Denormalized for simple Phase 1 testing)
  authorName String

  channelId String
  channel   Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([channelId, createdAt])
}

// ============================================================
//  CONTENT MODELS
// ============================================================
model CaseLaw {
  id         String     @id @default(uuid())
  title      String
  category   String
  difficulty Difficulty
  xpReward   Int        @default(100)

  facts         String
  question      String
  options       String[]
  correctAnswer String
  explanation   String
  isActive      Boolean  @default(true)

  submissions CaseSubmission[]

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditCase {
  id          String     @id @default(uuid())
  title       String
  companyName String
  difficulty  Difficulty
  description String

  invoiceDetails  Json?
  ledgerDetails   Json?
  expectedAction  String
  violationReason String?
  faultyField     String?
  tags            String[] @default([])

  xpReward  Int     @default(150)
  timeLimit Int?
  isActive  Boolean @default(true)

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaxSimulation {
  id          String     @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  scenario    String

  clientData Json
  questions  Json

  xpReward  Int     @default(200)
  timeLimit Int?
  isActive  Boolean @default(true)

  createdBy String?
  creator   User?   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ActivityType {
  audit
  tax
  caselaw
  quiz
  challenge
}

model Activity {
  id           String       @id @default(uuid())
  userId       String
  activityType ActivityType
  activityId   String
  title        String?
  xpEarned     Int
  score        Float?
  timeTaken    Int?
  answers      Json?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model CaseSubmission {
  id     String @id @default(uuid())
  caseId String
  userId String
  answer String @db.Text

  status     SubmissionStatus @default(PENDING)
  score      Int?
  feedback   String?
  reviewedAt DateTime?

  createdAt DateTime @default(now())

  case CaseLaw @relation(fields: [caseId], references: [id], onDelete: Cascade)
  user User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([caseId, userId])
}

model AnalystChallenge {
  id              String  @id @default(uuid())
  title           String
  slug            String  @unique
  description     String
  richTextContext String? @db.Text
  isActive        Boolean @default(false)

  difficulty DrillDifficulty @default(JUNIOR)
  xpReward   Int             @default(150)

  chartUrl   String?
  datasetUrl String?
  videoUrl   String

  question     String
  instructions String          @default("")
  answerType   DrillAnswerType @default(NUMBER)
  correctVal   String
  tolerance    Float?          @default(0.5)

  createdBy String?
  creator   User?   @relation("AdminCreatedDrills", fields: [createdBy], references: [id])

  attempts ChallengeAttempt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
}

model ChallengeAttempt {
  id String @id @default(uuid())

  userId      String
  challengeId String
  user        User             @relation(fields: [userId], references: [clerkId])
  challenge   AnalystChallenge @relation(fields: [challengeId], references: [id])

  isCorrect Boolean @default(false)
  userInput String
  attempts  Int     @default(1)

  unlockedVideo Boolean @default(false)

  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@unique([userId, challengeId])
}
